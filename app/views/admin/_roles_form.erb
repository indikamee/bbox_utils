<%= form_for(role_info,  url: admin_create_role_path,html: { method: :post }) do |form| %>
  <% if role_info.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(role_info.errors.count, "error") %> prohibited this role_info from being saved:</h2>

      <ul>
        <% role_info.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :person_id %>
    <%= form.collection_select :person_id, Person.all.sort_by(&:name), :id, :name, {:prompt=>true}, class:"form-control", :required => true  %>
  </div>

  <div class="field">
    <%= form.label :resource_type %>
    <%= form.select :resource_type, @resource_types , {:prompt=>true}, {class:'form-control'} %>
  </div>

  <div class="field">
    <%= form.label :resource_id %><br>
    <% items = (Event.all) %>
    
    <%= form.select :resource_id, 
      options_for_select(items.map { |item| ["#{item.class.name}- #{item.title}", item.id] }), 
      {:prompt=>true},
      { class: "form-control" } %>

  </div>

  <div class="field">
    <%= form.label :role_name %>
    <%= form.select :role_name, Role::ROLES , {}, {class:'form-control'} %>
  </div>

  <div>
    <%= form.submit "Create Role",  class:'btn btn-primary'%>
  </div>
<% end %>
